@import "normalize-rails";
@import "compass";
@import "susy";
@import "breakpoint";

/* Susy global settings */

$susy: (
  columns: 12,
  gutters: 1/4,
  global-box-sizing: border-box
);

@include border-box-sizing;

// -------------------------------------------

.about {
  .about-header {
    @include span(12 last);
    margin: 2em 0;

    .header-image {
      display: none;
    }

    #header-content {
      color: black;
      text-align: center;
      h2 {
        font-family: "adobe-garamond-pro";
        font-size: 1.2rem;
        font-style: italic;
        font-weight: 400;
        letter-spacing: 1px;
        margin: 20px auto;
        padding-top: 3em;
      }
    }
  }

  .content-section {
    @include span(12 last);
    .about-section {
      @include container(80%);
      h1 {
        text-align: center;
        font-family: "adobe-garamond-pro";
        font-size: 2.5rem;
        line-height: 1.2em;
        text-transform: none;
        letter-spacing: 0px;
        font-weight: 400;
        font-style: normal;
      }
      p {
        font-size: 1rem;
        line-height: 1.8em;
        letter-spacing: 0px;
        font-weight: 400;
        font-style: normal;
        color: rgba(26,26,26,.6);
        padding-bottom: 1em;
      }
      .profile-pic {
        height: 120px;
        width: 120px;
        border-radius: 100px;
        padding: 1em;
      }
      p#family-desc {
        padding-bottom: 3em;
      }
      .rule {
        padding-bottom: 1.5em;
      }
    }
  }

  @include breakpoint(600px) {
    .about-header {
      @inlude span(12 last);
      .header-image {
        display: inline;
        img {
          @include span(12 last);
          max-width: 75%;
          float: left;
          padding-left: 25px;
        }
      }
      #header-content {
        h2 {
          padding-top: 6em;
        }
      }
    }
    .about-section {
      #family-img img {
        float: left;
        padding: 1em;
      }
    }
  }
}
