@import "normalize-rails";
@import "compass";
@import "susy";
@import "breakpoint";

/* Susy global settings */

$susy: (
  columns: 12,
  gutters: 1/4,
  global-box-sizing: border-box
);

@include border-box-sizing;

// -------------------------------------------

.home {
  @include container(90%);
  text-align: center;
  p {
    padding: 1em 0em;
    text-align: left;
    line-height: 1.4;
    color: #677683;
    font-style: italic;
  }
  .header-image {
  }
  #header-content {
    color: black;
    text-align: center;
    h2 {
      font-family: "adobe-garamond-pro";
      font-size: 1.2rem;
      font-style: italic;
      font-weight: 400;
      letter-spacing: 1px;
      margin: 20px auto;
      padding: 1em 2em;
    }
    p {
      display: block;
      font-size: 2rem;
      line-height: 1em;
      font-weight: bold;
      font-style: normal;
      padding: 2em 1em;
    }
  }
  .rule {
    padding-top: 5em;
  }
  .overview {
    text-align: center;
    @include span(12 last);
    h1 {
      @include span(12 last);
      font-family: "adobe-garamond-pro";
      font-size: 2rem;
      line-height: 1.2em;
      letter-spacing: 0px;
      font-weight: 400;
      font-style: normal;
      padding-top: 0.65em;
    }
    p {
      @include container(80%);
      font-size: 1rem;
      line-height: 1.8em;
      letter-spacing: 0px;
      font-weight: 400;
      font-style: normal;
      color: rgba(26,26,26,.6);
      padding-bottom: 2em;
    }
    h3 {
      font-weight: bold;
    }
  }
  .talk-me {
    @include span(12 last);
    @include breakpoint(600px) { @include span(6);}
    padding: 0 1.5em 0 3em;
    h3 {
      border-bottom: 1px solid #677683;
      padding-bottom: 1em;
    }

  }
  .talk-you {
    @include span(12 last);
    @include breakpoint(600px) { @include span(6 last);}
    padding: 0 3em 0 1.5em;
    h3 {
      border-bottom: 1px solid #677683;
      padding-bottom: 1em;
    }
    p { padding-bottom: 1.2em; }
  }
  .closer {
    @include span(12 last);
    h2 {
      font-weight: 700;
      font-size: 1.5rem;
      padding-bottom: 0em;
    }
    .email {
      text-align: center;
      padding-bottom: 3em;
    }
  }

  @include breakpoint(600px) {
    .header-image {
      display: inline;
      img {
        @include span(12 last);
        max-width: 75%;
        padding-left: 3%;
      }
    }
  }
}

// Font colors
.wd-1 {
  color: #CA0000;
  font-weight: 600;
}
.wd-2 {
  color: royalblue;
  font-weight: 600;
}
