@import "normalize-rails";
@import "compass";
@import "susy";
@import "breakpoint";

/* Susy global settings */

$susy: (
  columns: 12,
  gutters: 1/4,
  global-box-sizing: border-box
);

@include border-box-sizing;

// -------------------------------------------

.home {
  @include container(90%);
  .header-image {
  }
  #header-content {
    color: black;
    text-align: center;
    h2 {
      font-family: "adobe-garamond-pro";
      font-size: 1.2rem;
      font-style: italic;
      font-weight: 400;
      letter-spacing: 1px;
      margin: 20px auto;
      padding: 1em 2em;
    }
    p {
      display: block;
      font-size: 2rem;
      line-height: 1em;
      font-weight: bold;
      font-style: normal;
      padding: 2em 1em;
    }
  }
  .rule {
    padding-top: 5em;
  }
  .overview {
    text-align: center;
    @include span(12 last);
    h1 {
      @include span(12 last);
      font-family: "adobe-garamond-pro";
      font-size: 2rem;
      line-height: 1.2em;
      letter-spacing: 0px;
      font-weight: 400;
      font-style: normal;
      padding-top: 0.65em;
    }
    p {
      @include container(80%);
      font-size: 1rem;
      line-height: 1.8em;
      letter-spacing: 0px;
      font-weight: 400;
      font-style: normal;
      color: rgba(26,26,26,.6);
      padding-bottom: 2em;
    }
    h3 {
      font-weight: bold;
    }
  }

  @include breakpoint(600px) {
    .header-image {
      display: inline;
      img {
        @include span(12 last);
        max-width: 75%;
        padding-left: 3%;
      }
    }
  }
}
