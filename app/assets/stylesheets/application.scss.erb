@import "normalize-rails";
@import "compass";
@import "susy";
@import "breakpoint";

$susy: (
  columns: 12,
  gutters: 1/4,
  global-box-sizing: border-box
);

@include border-box-sizing;

* {
  margin: 0;
  padding: 0;
  font-family: "proxima-nova";
  font-size: 16px;
  @media screen and (min-width: 900px) {
    font-size: 18px;
  }

  @media screen and (min-width: 1200px) {
    font-size: 20px;
  }
}

html, body {
  height: 100%;
}

.app-container {
  @include container;
  @include clearfix;
  min-height: 100%;
  position: relative;
}

img {
  float: right;
}

.rule {
    @include span(12 last);
    padding-top: 1em;
    hr {
      width: 80%;
      margin: 0 auto;
      display: block;
      height: 1px;
      border: 0;
      border-top: 1px solid #ccc;
      padding: 0;
    }
  }
