@import "normalize-rails";
@import "compass";
@import "susy";
@import "breakpoint";

/* Susy global settings */

$susy: (
  columns: 12,
  gutters: 1/4,
  global-box-sizing: border-box
);

@include border-box-sizing;

// -------------------------------------------

.resume {
  .resume-header {
    @include span(12 last);
    margin: 2em 0;
    .header-image {
      display: none;
    }
    #header-content {
      color: black;
      text-align: center;
      h2 {
        font-family: "adobe-garamond-pro";
        font-size: 1.2rem;
        font-style: italic;
        font-weight: 400;
        letter-spacing: 1px;
        margin: 20px auto;
        padding: 1em 2em;
      }
    }
  } 

  .content-section {
    @include span(12 last);
    .objective-statement {
      @include span(12 last);
      h2 {
        @include span(12 last);
        text-align: center;
        font-family: "adobe-garamond-pro";
        font-size: 2rem;
        line-height: 1.2em;
        letter-spacing: 0px;
        font-weight: 400;
        font-style: normal;
        padding: 1.3em;
      }
      p {
        @include container(80%);
        font-size: 1rem;
        line-height: 1.8em;
        font-weight: 400;
        font-style: normal;
        color: rgba(26,26,26,.6);
        padding-bottom: 2em;
      }
    }
    .summary-container {
      @include span(12 last);
      h2 {
        @include span(12 last);
        text-align: center;
        font-family: "adobe-garamond-pro";
        font-size: 2rem;
        line-height: 1.2em;
        letter-spacing: 0px;
        font-weight: 400;
        font-style: normal;
        padding: 1.3em;
      }        
      p {
        @include container(80%);
        font-size: 1rem;
        font-weight: 400;
        font-style: normal;
        color: rgba(26,26,26,.6);
        padding-bottom: 2em;
      }
    }
    .projects-container {
      #projects-pic {
        @include span(12 center);
        background-image: url(<%= asset_path 'woven_kruskals.png' %>);
        background-size: 90%;
        background-repeat: no-repeat;
        background-position: center center;
        height: 10.9em;
        .img-header {
          @include span(12 last);
          text-align: center;
          text-transform: uppercase;
          font-family: "adobe-garamond-pro";
          font-size: 2rem;
          line-height: 1.2em;
          letter-spacing: 0px;
          font-weight: 400;
          font-style: normal;
          padding-top: 1.3em;
        }
        h3 {
          text-align: center;
        }
      }  
      p {
        @include container(80%);
        text-align: center;
        font-size: 1rem;
        font-weight: 400;
        font-style: normal;
        color: rgba(26,26,26,.6);
        padding-bottom: 2em;
      } 
      a {
        @include container(80%);
        margin-left: 500px;
        font-size: 1rem;
        font-weight: 400;
        font-style: normal;
        color: rgba(0, 0, 198,.6);
        padding-bottom: 2em;
      }     
    }
    .professional-container {
      @include span(12 last);
      h2 {
        @include span(12 last);
        text-align: center;
        font-family: "adobe-garamond-pro";
        font-size: 2rem;
        line-height: 1.2em;
        letter-spacing: 0px;
        font-weight: 400;
        font-style: normal;
        padding: 1.3em;
      }        
      p {
        @include container(80%);
        font-size: 1rem;
        font-weight: 400;
        font-style: normal;
        color: rgba(26,26,26,.6);
      }
      #company {
        @include container(80%);
        font-size: 1.2rem;
        font-weight: 400;
        font-style: normal;
        color: rgba(26,26,26,.6);
      }
      #dates {
        @include container(80%);
        font-family: "open sans";
        font-size: 0.8rem;
        font-weight: 400;
        font-style: normal;
        color: rgba(26,26,26,.6);
        padding-bottom: 0.2em;
      }
    }
    .education-container {
      #education-pic {
        @include span(12 last);
        background-image: url(<%= asset_path 'resume-header.jpeg' %>);
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center center;
        height: 20.9em;

        .img-header {
          text-align: center;
          font-size: 2.75rem;
          line-height: 1em;
          padding-top: 3em;
          text-transform: uppercase;
          font-weight: 700;
          font-style: normal;
          color: white;
        }
      }
      ul {
        @include span(12 last);
        padding: 5em;
      }
      li {
        @include span(12 last);
        list-style: none;
        padding: 1em 0;
        font-size: 1.3rem;
      }
    }
  }

  @include breakpoint(600px) {
    .resume-header {
      @include span(12 last);
      .header-image {
        display: inline;
        img {
          @include span(12 last);
          max-width: 75%;
          padding-right: 65px;
        }
      }
    }

    .rule {
      display: none;
    }
  } 
} 
