@import "normalize-rails";
@import "compass";
@import "susy";
@import "breakpoint";

/* Susy global settings */

$susy: (
  columns: 12,
  gutters: 1/4,
  global-box-sizing: border-box
);

@include border-box-sizing;

// -------------------------------------------

.resume {
  @include container(90%);
  .resume-header { 
    margin: 2em 0;
    .header-image {
      display: none;
    }
    #header-content {
      color: black;
      text-align: center;
      h2 {
        font-family: "adobe-garamond-pro";
        font-size: 1.2rem;
        font-style: italic;
        font-weight: 400;
        letter-spacing: 1px;
        margin: 20px auto;
        padding: 1em 2em 16em 2em;
      }
    }
  } 

  .content-section {
    @include span(12 last);
    .objective-container {
      h2 {
        text-align: center;
        font-family: "adobe-garamond-pro";
        font-size: 2rem;
        line-height: 1.2em;
        letter-spacing: 0px;
        font-weight: 400;
        font-style: normal;
        padding-bottom: 0.8em;
      }
      p {
        @include container(80%);
        font-size: 1rem;
        font-weight: 400;
        font-style: normal;
        line-height: 1.8em;
        color: rgba(26,26,26,.6);
        padding-bottom: 1.6em;
      }
    }

    .summary-container {
      h2 {
        text-align: center;
        font-family: "adobe-garamond-pro";
        font-size: 2rem;
        line-height: 1.2em;
        letter-spacing: 0px;
        font-weight: 400;
        font-style: normal;
        padding-bottom: 0.8em;
      }
      #indent0 {
        @include container(80%);
        font-size: 1rem;
        font-weight: 400;
        font-style: normal;
        color: rgba(26,26,26,.6);
      }
      #indent1, #indent2 {
        @include container(50%);
        font-size: 1rem;
        font-weight: 400;
        font-style: normal;
        color: rgba(26,26,26,.6);
        padding-left: 40px;
      }
      #indent2 {
        padding-bottom: 1.4em;
      }
      p {
        @include container(80%);
        font-size: 1rem;
        font-weight: 400;
        font-style: normal;
        color: rgba(26,26,26,.6);
        padding-bottom: 1.4em;
      }
    }

    .projects-container {
      #projects-pic {
        @include span(12 last);
        background-image: url(<%= asset_path 'woven_kruskals.png' %>);
        background-size: 90%;
        background-repeat: no-repeat;
        background-position: center center;
        height: 10.9em;
        margin-top: 1.8em;
        margin-bottom: 1.1em;
        #spacing {
          line-height: 2.4em;
        }
        #haze {
          @include container(50%);
          background: rgba(180,200,200,0.6);
          border-radius: 60px;
          width: 375px;
          height: 76px;
        }
        .img-header {
          text-align: center;
          font-family: "adobe-garamond-pro";
          font-size: 2rem;
          line-height: 1.2em;
          letter-spacing: 0px;
          font-weight: 600;
          font-style: normal;
        }
        .img-subheader {
          @include container(50%);
          text-align: center;
          font-family: "adobe-garamond-pro";
          font-size: 1rem;
          line-height: 1em;
          letter-spacing: 0px;
          font-weight: 600;
          font-style: normal;
        }
      }
      table {
        @include span(12 last);
        padding-top: 1.2em;
        tbody {
          line-height: 1.8em;
          tr {
            font-weight: 400;
            font-style: normal;
            .first-column {
              @include span(3 of 12);
              color: rgba(0, 0, 198,.6);
              padding-left: 10%;
            }     
            .second-column {
              @include span(9 last);
              text-align: left;
              font-size: 1rem;
              color: rgba(26,26,26,.6);
            }
          }
        }
      }
      #spacing2 {
        line-height: 2.7em;
        color: white;
      }
    clear: both;       
    }

    .professional-container {
      #professional-pic {
        @include span(12 last);
        background-image: url(<%= asset_path 'base-jumping.png' %>);
        background-size: 90%;
        background-repeat: no-repeat;
        background-position: center center;
        height: 10.9em;
        .img-header {
          text-align: center;
          font-size: 2.75rem;
          line-height: 1em;
          padding-top: 1em;
          font-weight: 700;
          font-style: normal;
          color: white;
        }
      }
      .photo-credit {
        text-align: left;
        font-weight: 400;
        font-size: 0.5rem;
        padding-left: 62px;
        margin-bottom: 3em;
      }
      h2 {
        text-align: center;
        font-family: "adobe-garamond-pro";
        font-size: 2rem;
        line-height: 1.2em;
        letter-spacing: 0px;
        font-weight: 400;
        font-style: normal;
      }        
      p {
        @include container(80%);
        font-size: 1rem;
        font-weight: 400;
        font-style: normal;
        color: rgba(26,26,26,.6);
      }
      #company {
        @include container(80%);
        font-size: 1.2rem;
        font-weight: 400;
        font-style: normal;
        color: rgba(26,26,26,.6);
      }
      #dates {
        @include container(80%);
        font-family: "open sans";
        font-size: 0.8rem;
        font-weight: 400;
        font-style: normal;
        color: rgba(26,26,26,.6);
        padding-bottom: 0.2em;
      }
      clear: both;
    }

    .education-container {
      #education-pic {
        background-image: url(<%= asset_path 'resume-header.jpg' %>);
        background-size: 90%;
        background-repeat: no-repeat;
        background-position: center center;
        height: 10.9em;
        .img-header {
          text-align: center;
          font-size: 2.75rem;
          line-height: 1em;
          padding-top: 1.2em;
          font-weight: 700;
          font-style: normal;
          color: white;
        }
      }
      ul {
        padding: 3em;
      }
      li {
        @include container(90%);
        list-style: none;
        line-height: 1.4em;
        font-size: 1rem;
        font-weight: 400;
        color: rgba(26,26,26,.6);
      }
    }
  }

  @include breakpoint(600px) {
    .resume-header {
      @include span(12 last);
      .header-image {
        display: inline;
        img {
          @include span(12 last);
          max-width: 75%;
          padding-right: 65px;
          height: 20.9em;
        }
      }
    }
  } 
} 
