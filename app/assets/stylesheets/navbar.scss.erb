@import "normalize-rails";
@import "compass";
@import "susy";
@import "breakpoint";

$susy: (
  columns: 12,
  gutters: 1/4,
  global-box-sizing: border-box
);

@include border-box-sizing;

/* Navbar container */
.navbar {
  @include container;
  margin-top: 1em;
  color: #bbb;
  clear:both;
  .logo {
    padding-bottom: .3em;
    img {
      height: 2.5em;
    }
  }
  .links {
    .link {
      @include container(50%);
      text-align: center;
      padding: .3em 0;
    }

    a {
      color: inherit;
      text-transform: uppercase;
      text-decoration: none;
      letter-spacing: 2px;
      font-weight: 900;
      line-height: 1em;
      font-size: .75rem;
    }

    a:hover {
      color: #fff;
    }
  }

  /* Breakpoints */
  @include breakpoint(600px) {
    .logo {
      @include span(1.5 at 1);
    }
    .links {
      @include span(8 last);
      background: linear-gradient(to left, rgba(10, 10, 10, 0.9), rgba(10, 10, 10, 0.3));
      .link {
        @include span(1 of 4 last);
      }
    }
    .rule {
      display: none;
    }
  }
}
