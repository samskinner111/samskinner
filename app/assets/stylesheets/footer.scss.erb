@import "normalize-rails";
@import "compass";
@import "susy";
@import "breakpoint";

$susy: (
  columns: 12,
  gutters: 1/4,
  global-box-sizing: border-box
);

@include border-box-sizing;

.footer {
  @include span(12 last);
  position: relative;
  bottom: 0;
  left: 0;
  background-color: #26262a;
  color: rgba(255, 255, 255, .4);
  height: 15em;
  text-align: center;
  clear: both;

  /* Tag defaults */
  a {
    color: inherit;
    text-decoration: none;
  }
  a:hover {
    color: #fff;
  }
  li {
      padding: 1em 1em;
      display: inline;
  }

  /* Footer logo */
  .footer-image {
    @include span(12 last);
    img {
      height: 4em;
      width: 4em;
      margin: 0 auto;
      float: none;
      margin: 2em 0 -3em 0;
    }
  }

  /* Footer navigation */
  .footer-links {
    @include span(12 last);
    padding: 5em 0 1em 0;
    li {
      color: rgba(255, 255, 255, .7);
      font-weight: 400;
      line-height: 1.65;
      text-transform: uppercase;
      letter-spacing: .17rem;
      transition: all .15s;
      font-size: 1rem;
      padding: 0 .8em;
      p {
        font-size: 1rem;
        line-height: 1.8em;
        letter-spacing: 0px;
        padding-bottom: 3em;
      }
    }
  }

  /* Social Icons */

  .social-icons {
    padding-top: 1em;
    li {
      padding: 0 .25em;
      i {
        color: rgba(255, 255, 255, .7)
      }
      i:hover {
        color: #fff;
      }
    }
  }
}
