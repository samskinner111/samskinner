@import "normalize-rails";
@import "compass";
@import "susy";
@import "breakpoint";

/* Susy global settings */

$susy: (
  columns: 12,
  gutters: 1/4,
  global-box-sizing: border-box
);

@include border-box-sizing;

// ----------------------------------------

.letter {
  @include container;
  text-align: center;
  p {
    padding: 1em 0em;
    text-align: left;
    line-height: 1.4;
    color: #677683;
    font-style: italic;
  }
  .letter-header {
    @include span(12);
    .header-image {
      display: inline;
      img {
        @include span(12 last);
        max-width: cover;
        float: left;
        padding-top: 20px;
        padding-left: 65px;
        padding-right: 65px;
      }
    }
    .photo-credit {
      p {
        text-align: left;
        font-weight: 400;
        font-size: 0.5rem;
        padding-left: 65px;
      }
    }
  } 
  .welcome {
    @include span(12 last);
    margin-top: 2em;
    h1 {
      @include span(12 last);
    }
    h2 {
      @include span(12 last);
      padding-top: 0em;
      padding-bottom: 2em;
    }
  }
  .talk-me {
    @include span(12 last);
    @include breakpoint(600px) { @include span(6);}
    padding: 0 1.5em 0 3em;
    h3 {
      border-bottom: 1px solid #677683;
      padding-bottom: 1em;
    }
  }
  .talk-you {
    @include span(12 last);
    @include breakpoint(600px) { @include span(6 last);}
    padding: 0 3em 0 1.5em;
    h3 {
      border-bottom: 1px solid #677683;
      padding-bottom: 1em;
    }
  }
  .closer {
    @include span(12 last);
    h2 {
      font-weight: 700;
      font-size: 1.5rem;
      padding-bottom: 0em;
    }
    .email {
      text-align: center;
      padding-bottom: 3em;
    }
  }
}

// Font colors
.wd-1 {
  color: #CA0000;
  font-weight: 600;
}
.wd-2 {
  color: royalblue;
  font-weight: 600;
}


